---
import Layout from '../layouts/Layout.astro';
import Head from "../components/Head.astro";
import Main1 from '../components/Main1.astro';
import Footer from '../components/Footer.astro';

//const response = await fetch("http://localhost:3000/data")
//const response = await fetch("https://my-json-server.typicode.com/CaptWhite/aster-newsletter/data")
const response = await fetch("https://my-json-server.typicode.com/AsterBCN/newsletter-repo/data/1")
const {id, date, news} = await response.json() 
---
<Layout>
    <Head seq={id} date={date}/>
    <Main1 news={news}/>
    <Footer/>
</Layout>