---
import Main311  from './Main311.astro';
import Main312 from './Main312.astro';

type News = {
  order: number;
  category: string;
  url: string;
  image: string;
  title: string;
  summary: string
}

type Reverse = {
  rever: string;
  first: string;
  last: string;
}

export interface Props {
  news: News;
}

const {news } = Astro.props
const {order,category, url, image, title, summary} = news
const reverse: Reverse =  (order%2 == 0) 
  ? {rever:'reverse', 
    first:'column column-2 mn-column2-article first', 
    last:'column column-2 mn-column2-article last'} 
  : {rever:'', 
    first:'column column-2 mn-column2-article', 
    last:'column column-2 mn-column2-article'}  

---


<!-- ARTICLE -->
{

<table class="row row-3" align="center" width="100%">
  <tbody>
    <tr>
      <td>
        
        <table class="row-content stack mn-row-content-article" align="center" width="800" >
          <tbody>
            <tr class={reverse.rever}>
                {   reverse.rever == 'reverse'
                    ? <Main311  news={news} reverse={reverse}/>
                      <Main312  news={news} reverse={reverse}/>
                    :  
                      <Main312  news={news} reverse={reverse}/>
                      <Main311  news={news} reverse={reverse}/>
                }
            </tr>
          </tbody>
        </table>
      </td> 
    </tr> 
  </tbody>
</table>


}
<!-- End of ARTICLE -->